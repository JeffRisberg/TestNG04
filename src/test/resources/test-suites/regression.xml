<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Regression Test Suite" parallel="true">
    <test name="Repo Regression Tests">
        <classes>
            <class name="com.company.demo.FeatureATest"/>
            <class name="com.company.demo.FeatureBTest">
                <methods>
                    <exclude name="testB3"/>
                </methods>
            </class>
            <class name="com.company.demo3.FeatureGTest"/>
            <class name="com.company.FeatureETest"/>
        </classes>
    </test>
    <test name="Regression Tests">
        <classes>
            <class name="com.company.demo.FeatureCTest"/>
            <class name="com.company.demo2.FeatureDTest"/>
            <class name="com.company.FeatureFTest">
                <methods>
                    <include name="testF3"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
